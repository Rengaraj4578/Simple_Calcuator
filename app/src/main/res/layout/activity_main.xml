<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#100202"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/values"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/textColor"
        android:maxLines="1"
        android:gravity="end"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/textColor"
        android:maxLines="1"
        android:gravity="end"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/allclear"
                style="@style/actionButton"
                android:text="AC" />
            <TextView
                android:id="@+id/openbracket"
                style="@style/actionButton"
                android:text="("/>
            <TextView
                android:id="@+id/closebracket"
                style="@style/actionButton"
                android:text=")"/>
            <TextView
                android:id="@+id/divide"
                style="@style/actionButton"
                android:text="/"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/one"
                style="@style/numberButton"
                android:text="1"/>
            <TextView
                android:id="@+id/two"
                style="@style/numberButton"
                android:text="2"/>
            <TextView
                android:id="@+id/three"
                style="@style/numberButton"
                android:text="3"/>
            <TextView
                android:id="@+id/multiply"
                style="@style/actionButton"
                android:text="x"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/four"
                style="@style/numberButton"
                android:text="4"/>
            <TextView
                android:id="@+id/five"
                style="@style/numberButton"
                android:text="5"/>
            <TextView
                android:id="@+id/six"
                style="@style/numberButton"
                android:text="6"/>
            <TextView
                android:id="@+id/difference"
                style="@style/actionButton"
                android:text="-"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seven"
                style="@style/numberButton"
                android:text="7"/>
            <TextView
                android:id="@+id/eight"
                style="@style/numberButton"
                android:text="8"/>
            <TextView
                android:id="@+id/nine"
                style="@style/numberButton"
                android:text="9"/>
            <TextView
                android:id="@+id/add"
                style="@style/actionButton"
                android:text="+"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dot"
               style="@style/numberButton"
                android:text="."/>
            <TextView
                android:id="@+id/zero"
                style="@style/numberButton"
                android:text="0"/>

            <ImageButton
                android:id="@+id/backspace"
                style="@style/numberButton"
                android:background="@drawable/backspace"/>
            <TextView
                android:id="@+id/equals"
                style="@style/actionButton"
                android:text="=" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>